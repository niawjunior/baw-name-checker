{
  "manifest_version": 3,
  "name": "BAW Name Checker",
  "version": "1.0",
  "description": "BAW Name Checker",
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "BAW Name Checker",
    "default_icon": {
      "16": "icons/editor-icon16.png"
    }
  },
  "web_accessible_resources": [{
    "resources": ["icons/*.png"],
    "matches": ["<all_urls>"]
  }],
  "content_scripts": [
    {
      "matches": [
        "https://*/*"
        ],
      "run_at": "document_idle",
      "js": [
        "main.js"
      ],
      "css": [
      ]
    }
  ],
  "icons": {
    "16": "icons/editor-icon16.png"
  }
}
